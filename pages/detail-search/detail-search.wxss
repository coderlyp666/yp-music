/* pages/detail-search/detail-search.wxss */
page {
  background-color: #f5f5f5;
}

.content {
  padding: 0 40rpx;
  box-sizing: border-box;
}

.hotSong .inner{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.hotSong .item {
  margin: 20rpx 10rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 26rpx;
}

.hotSong .item:first-child{
  color: #2CCE8A;
}

.suggest {
  margin-top: 40rpx;
}
.suggest .title {

  font-weight: 700;
  color: #2CCE8A;
}
.suggest-list .item {
  display: flex;
  align-items: center;
  margin: 10rpx;
  font-size: 26rpx;
}

.suggest-list .icon {
  width: 60rpx;
}
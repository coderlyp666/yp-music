/* pages/main-profile/main-profile.wxss */
page {
  background-color: #f5f5f5;
}
.section {
  margin: 40rpx;
  padding: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  align-items: center;
}

.userinfo .login {
  width: 80rpx;
  margin-right: 30rpx;
}

.domain {
  display: flex;
  justify-content: space-around;
}
.domain .icon {
  width: 80rpx;
  margin-bottom: 10rpx;
}

.domain .item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.domain .item .name {
  font-size: 26rpx;
}
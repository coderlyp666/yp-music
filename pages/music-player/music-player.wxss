/* pages/music-player/music-player.wxss */
.bj {
  position: relative;
  width: 100%;
  height: 100%;
}
.bj-img , .cover{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
  
}
.cover {
  background-color: rgba(0, 0, 0, .3);
  backdrop-filter: blur(20px);
}

.nav-bar .center {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 26rpx;
}

.nav-bar .center .mar {
  margin: 0 10rpx;
}
.nav-bar .center .active {
  color: #fff;
}

.music {
  padding: 40rpx 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  color: #fff;
}
.music .image {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.music .image image {
  width: 100%;
  border-radius: 22rpx;
}
.music .info {
  margin-top: 20rpx;
  font-size: 28rpx;
}
.music .info .name{
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

.music  .lyric {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0 40rpx 0;
  white-space: nowrap;
}

.music .sliber {
  margin: 10rpx;
}

.music .time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.music .icon {
  width: 60rpx;
}

.music .control {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.music  .icon.order {
  width: 80rpx;
}

.music .icon.pause {
  width: 140rpx;
}

.lyric-list {
  height: 100%;
  text-align: center;
  padding: 0 40rpx 40rpx;
  box-sizing: border-box;
}

.lyric-list ::-webkit-scrollbar {
  display: none;
}
.lyric-list .item {
  height: 35px;
  line-height: 35px;
  font-size: 28rpx;
  color: #fff;
}

.lyric-list .item.active {
  color: #0f0;
  font-size: 32rpx;
}

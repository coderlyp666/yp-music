/* components/ranking-item/ranking-item.wxss */
.item {
  width: 100%;
  display: flex;
  background-color: #eee;
  margin: 20rpx 0;
  box-sizing: border-box;
  border-radius: 12rpx;
}
.item .left {
  flex: 1;
  padding: 20rpx 40rpx 20rpx 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.item .left .info{
  font-size: 24rpx;
  padding: 10rpx 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
}

.item .right {
  position: relative;
}

.item .right .img {
  width: 220rpx;
  height: 100%;
  border-radius: 10rpx;
}

.item .right .playCount {
  position: absolute;
  right: 6rpx;
  bottom: 8rpx;
  box-sizing: border-box;
  padding: 5rpx;
  border-radius: 10rpx;
  background-color: rgba(0, 0, 0, .5);
  font-size: 22rpx;
  color: #fff;
}

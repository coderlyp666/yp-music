/* components/song-item/song-item.wxss */
.item {

}
.item .image {
  position: relative;
}

.item .image .img{
  width: 100%;
  border-radius: 12rpx;
}

.item .image .playCount {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  padding: 2rpx;
  background-color: rgba(0, 0, 0, .6);
  border-radius: 8rpx;
  color: #fff;
  font-size: 24rpx;
  
}

.item .name {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}


/* components/menu-item/menu-item.wxss */

.menu-item {
  display: flex; 
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
  padding: 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.menu-item .left {
  display: flex;
  align-items: center;
}

.menu-item .left .image {
  width: 90rpx;
  margin-right: 30rpx;
  border-radius: 12rpx;
}
.menu-item .left .image1 {
  width: 100rpx;
  margin-right: 10rpx;
  margin-left: -6rpx;
  border-radius: 12rpx;
}

.menu-item .left .info {
  font-size: 26rpx;
}

.menu-item .left .info .count {
  font-size: 24rpx;
  color: #999;

}
